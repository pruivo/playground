<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="GHI15520" monitorInterval="60" shutdownHook="disable">
    <Appenders>
        <!-- Colored output on the console -->
        <Console name="STDOUT">
            <PatternLayout
                    pattern="%highlight{%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p [%c{1.}] %m%throwable}{INFO=normal, DEBUG=normal, TRACE=normal}%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="STDOUT" level="INFO"/>
        </Root>
    </Loggers>
</Configuration>
